<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/rounded"
        android:weightSum="1.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageState_All"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.43" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="통합대기환경"
                android:id="@+id/textView7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/date"
                android:id="@+id/textView8"
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="10dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.77" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:layout_marginStart="30dp"
                android:src="@drawable/statebutton_bad"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/microgram"
                android:id="@+id/textView15"
                android:layout_marginLeft="10dp"
                android:textSize="10dip"
                android:textStyle="italic"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="18dp"
                android:layout_alignTop="@+id/imageView4"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01HR"
                android:id="@+id/textView16"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/textView15"
                android:layout_toStartOf="@+id/textView15"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="오늘 대기환경지수는 - 입니다."
                android:id="@+id/textView18"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/rounded"
        android:weightSum="1.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.43" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="미세먼지"
                android:id="@+id/textView19"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/date"
                android:id="@+id/textView20"
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="10dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.77" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageView5"
                android:layout_marginStart="30dp"
                android:src="@drawable/statebutton_bad"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/microgram"
                android:id="@+id/textView21"
                android:layout_marginLeft="10dp"
                android:textSize="10dip"
                android:textStyle="italic"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01HR"
                android:id="@+id/textView23"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/textView21"
                android:layout_toStartOf="@+id/textView21"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView25"
                android:text="24HR"
                android:layout_marginRight="8dp"
                android:textSize="20dp"
                android:layout_below="@+id/imageView5"
                android:layout_alignStart="@+id/textView23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/microgram24"
                android:id="@+id/textView27"
                android:layout_alignBottom="@+id/textView25"
                android:layout_alignStart="@+id/textView21"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="미세먼지농도는  - 입니다."
                android:id="@+id/textView28"
                android:layout_below="@+id/imageView5"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
